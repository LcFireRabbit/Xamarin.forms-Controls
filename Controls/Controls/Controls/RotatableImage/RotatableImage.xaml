<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Controls.Controls.RotatableImage.RotatableImage"
             x:Name="rotatableImage">
  <ContentView.Content>
        <Grid BindingContext="{x:Reference rotatableImage}">
            <Image x:Name="RTImage" HorizontalOptions="Center" VerticalOptions="Center" Source="{Binding ImageSource}" WidthRequest="{Binding WidthRequest}" HeightRequest="{Binding HeightRequest}"/>
        </Grid>
  </ContentView.Content>
</ContentView>